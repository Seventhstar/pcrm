<li class="item new" commentid="{{id}}" id="comment_{{id}}"> 
  <div class="pic">{{avatar}}</div>
  <div class="cont">
    <div class="head">
      <div class="name"> {{username}} </div>
      <div class="info"> {{createdat}} </div>
      <div class="date">
      </div>
    </div>
  </div>
  <div class="text" ownerid={{ownerid}}>
    <span>{{body}}</span>
  </div>      
</li>