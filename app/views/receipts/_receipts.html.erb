<div class="panel panel-default">
<table class="tleads">
  <thead>
    <tr>
    	<th>Дата</th>
    	<th>Тип оплаты</th>
    	<th>Исполнитель</th>
      <th>Основание</th>
      
      <th>Контрагент</th>
      <th>Адрес</th>
      
      <th width="80px;">Сумма</th>
      <th>Комментарий</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipts.each do |receipt| %>
      <tr>
      	<td><%= receipt.date %></td>
      	<td><%= receipt.payment_type_name %></td>
      	<td><%= receipt.user_name %></td>
      	<td><%= receipt.purpose %></td>
      	<td><%= receipt.provider_name %></td>
        <td><%= receipt.project_address %></td>
        <td class="td_right"><%= receipt.sum.to_sum %></td>
        <td><%= receipt.description %></td>
        <%= td_tool_icons(receipt, 'edit,delete','href' )%>
      </tr>
    <% end %>
       <tr class="total">
        <td>Итого:</td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td class="td_right"><%= @sum.to_sum %></td>
        <td></td>
        <td></td>
      </tr>   
  </tbody>
</table>
</div>