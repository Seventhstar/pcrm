<% cur_month  = "" %>
<% first_table = true %>
<% @sum = 0 %>


  <% @receipts.each do |receipt| %>
    <% new_date = receipt.date? ? receipt.date : Date.today %>
      <% if cur_month != new_date.month && (params[:sort] == "date" || (params[:sort] == nil)) %> 
          <% cur_month = new_date.month %>
          <%= render "head", {:first_table => first_table, :heading => t(new_date.try('strftime',"%B"))+" "+new_date.try('strftime',"%Y") } %>
          <% first_table = false %>  
          <% @sum = 0 %>
      <% end %>
      <tr>
      	<td><%= receipt.date %></td>
      	<td><%= receipt.payment_type_name %></td>
      	<td><%= receipt.executor_name %></td>
      	<td><%= receipt.purpose %></td>
      	<td><%= receipt.provider_name %></td>
        <td><%= receipt.project_address %></td>
        <td class="td_right"><%= receipt.sum.to_sum %></td>
        <td><%= receipt.description %></td>
        <%= td_tool_icons(receipt, 'edit,delete','href' )%>
        <% @sum = @sum + receipt.sum %>
      </tr>
    <% end %>
    <%= render 'bottom' %>
  </tbody>
</table>
</div>
<br>

</div>