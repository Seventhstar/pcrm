
<%= simple_form_for(@receipt) do |f| %>

  <div class="box_wrap box_wrap_1">
  <div class="panel-left">
    <%= hidden_field_tag 'prj_sum', @receipt.project.nil? ? '': @receipt.project.total %> 
    <table class="tbl_fc tbl_fc">
      <tr><td class="caption">Дата создания:</td>
        <td><div class="inp_w"><%= f.text_field :date, :value => @date, label: false, class: "txt datepicker" %></div></td></tr>
      <tr><td class="caption">Вид платежа:</td>
        <td><div class="inp_w"><%= f.select :payment_type_id, options_for_select(PaymentType.order(:name).collect{ |u| [u.name, u.id] },@receipt.payment_type_id) %>
      </div></td></tr>


    <tr><td class="caption">Сумма:</td><td ><div class="left"><%= f.text_field :sum, label: false, class: "txt sum_mask" %></div>
        <div class="calc_div">
        <span class='calc_proc' delim=4>25%</span>
        <span class='calc_proc' delim=2>50%</span>
        <span class='calc_proc' delim=1>100%</span>
        <span class='calc_proc' delim=1>Остаток</span>
        </div>
        </td></tr>

    <tr><td class="caption">Комментарий:</td>
      <td><div class="inp_w"><%= f.text_area :description, class: 'txt alone',label: false %></div></td></tr>
      </table>
  </div>
    <div class="panel-right">
    <table class="tbl_fc tbl_fc">
      <tr><td class="caption">Проект:</td>
        <td><div class="inp_w"><%= f.select :project_id, content_tag(:option,'Выберите...',:value=>0)+options_for_select(@projects.collect{ |u| [u.address, u.id] },@receipt.project_id) %>  
        </div></td></tr>
      <tr><td class="caption">Контрагент:</td>
        <td><div class="inp_w"><%= f.select :provider_id, content_tag(:option,'Клиент',:value=>0)+options_for_select(Provider.order(:name).collect{ |u| [u.name, u.id] },@receipt.provider_id) %>
      </div></td></tr>
      <tr><td class="caption">Создатель:</td>
        <td><div class="inp_w"><%= f.select :user_id, options_for_select(User.order(:name).collect{ |u| [u.name, u.id] },@receipt_user.id) %>
      </div></td></tr>
      <tr><td class="last_td"></td>
      <td class="last_td"><%= link_to 'Отмена', receipts_url, :class => "sub btn_a btn_reset"%>
        <%= f.button :submit, value: 'Сохранить', :class => 'sub btn_a' %></td></tr>
    </table>
    </div>


  </div>

<% end %>
