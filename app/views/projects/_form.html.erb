<%= simple_form_for(@project) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<% if !is_admin? %>
  <%= f.hidden_field :executor_id,  :value => (@project.executor_id ||= current_user.id) %>
<% end %>
    <h3>Данные</h3>
    <div class="box_wrap box_wrap_1">
      <div class="fullwidth"><table class="fullwidth tbl_fc fw_form projects"><thead>
        <tr><th width="20%"></th><th width="20%"></th><th width="20%"></th><th width="20%"></th><th width="20%"></th></tr></thead>
        <tbody>
          <tr>
            <td><div class="inp_w"><%= f.input :number, label: 'Номер' %></div></td>
            <td><div class="inp_w"><label>Дата</label><%= f.text_field :date_sign, value: Date.today.try('strftime',"%d.%m.%Y"), class: "txt datepicker" %></div></td>
            <td colspan="3"><div class="inp_w"><%= f.input :address, label: 'Адрес' %></div></td>
          </tr>
          <%= f.simple_fields_for  :client do |c| %>
          <tr>
            <td colspan="2"><div class="inp_w"><%= c.input :name, label: 'ФИО' %></div></td>
            <td><div class="inp_w"><%= c.input :phone, label: 'Телефон' %></div></td>
            <td colspan="2"><div class="inp_w"><%= c.input :email, label: 'E-mail' %></div></td>
          </tr>
          <% end %> 

          <tr><td class="gr_caption">Вид работы и исполнители</td></tr>

          <tr>
            <td><div class="inp_w">
              <label>Вид работы</label>
              <%= chosen_src :project_type_id, ProjectType.all, @project, {nil_value: 'Вид работы...' } %>
            </div></td>
            
            <td colspan="2">
            <% if is_admin? %>
              <div class="inp_w">
                <label>Дизайнер</label>
                <%= chosen_src :executor_id, User.all, @project, {nil_value: 'Дизайнер...' } %>
              </div>
            <% end %>
            </td>

            <td colspan="2">
            <% if is_admin? %>
              <div class="inp_w">
                <label>Визуализатор</label>
                <%= chosen_src :visualer_id, User.all, @project, {nil_value: 'Визуализатор...' } %>
              </div>
            <% end %>
            </td>
          </tr>
          

          <tr><td class="gr_caption">Площадь и стоимость</td></tr>
          <%= render 'footage', f: f %>
          <%= render 'executor', f: f %>

          <tr><td class="gr_caption">Сроки</td></tr>
            <tr>
            <td><div class="inp_w"><label>Начало</label>
                <%= f.text_field :date_start, value: Date.today.try('strftime',"%d.%m.%Y"), class: "txt datepicker" %></div></td>
            <td><div class="inp_w"><label>Окончание</label><%= f.text_field :date_end_plan, class: "txt datepicker" %></div></td>
            <td><div class="inp_w"><label>Рабоч. дней без уч. праздников</label> <%= number_field_tag :days, 0, {class: 'form-control'} %></div></td>
            <td></td>
            <td></td>
            </tr>

            <tr>
                <td colspan="5"><div class="inp_w"><label>Примечание</label><%= f.text_area :first_comment, class: :txt, label: false, rows: "2" %></div></td></tr>

            <tr><td><%= link_to 'Отмена', projects_url, :class => "sub btn_a btn_reset"%>
            <%= f.button :submit, value: 'Сохранить', :class => 'sub btn_a ' %></td></tr>
            
            
          
        </tbody>
        </table>
      </div>
    </div> 


  <div class="form-actions">
    
  </div>

  <%= f.hidden_field :owner_id, value: current_user.id %>

<% end %>
