<div class="panel panel-default">
<table class="tleads projects">
  <thead>
    <tr> 
      <th width="40px">Номер</th>
      <th>Адрес</th>
      <th>Вид проекта</th>
      <th>Заказчик</th>
      <th>Исполнитель</th>
      <th width="87px">Дата начала</th>
      <th width="112px">Дата окончания</th>
      <th width="40px">1/м2</th>
      <th width="70px">Стоимость</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="<%= class_for_project(project) %>">
        <td class="center"><%= project.number %></td>
        <td><%= project.address %></td>
        <td><%= project.project_type_name %></td>
        <td><%= project.client_name %></td>
        <td><%= project.executor_name %></td>
        
        <td class="center"><%= project.date_start %></td>
        <td class="center"><%= project.date_end_plan %></td>
 
        <td class="td_right"><%= project.price %></td>
        <td class="td_right <%= project.sum_total_real ==0 ? '':'red' %>" title="<%= project.sum_total.to_sum %>"><%= project.total.to_sum %></td>
        <%= td_tool_icons(project,'edit,show','href') %>
      </tr>
    <% end %>
  </tbody>
</table>