<table class="tleads twfixed" id="project_goods"  model="ProjectGood" action="project_goods">
  
  <tbody>
  <% if first_col %>
  	<tr>
	  	<th width='220px'>Позиция</th>
	  	<th width='216px'>Поставщик</th>
	  	<th width='115px'>Срок поставки</th>
	  	<th width='230px'>Примечание</th>
	  	<th width='40px' alt="Предложено / заказано"> Зак.</th>
	  	<th width='58px'>Валюта</th>
	  	<th fld='gsum' width='90px'>Стоимость</th>
	  	<th></th>
		</tr>
  <% end %>
    <% pgt.goods.order(:id).each do |g| %>
      <tr id="pgt_item<%= g.id %>">
        <td width='220px'><%= g.name %></td>
        <td width='210px'><%= g.provider_name %></td>
        <td width='115px'><%= g.date_supply.try('strftime',"%d.%m.%Y") %></td>
        <td width='230px'><%= g.description %></td>
        <td><%= g.currency_name %>  </td>
        <td><%= g.currency_name %></td>
				<td width='90px'><%= g.gsum.to_sum if !g.gsum.nil? %></td>
        <%= tool_icons(g, {icons:'inline_edit,delete',tag:'span'}) %>
      </tr>
      <tr id="new_pgt_item<%= g.id %>" class="invisible new_row">
        <% iname = ['upd',g.id].join %>
        <%= hidden_field iname,'project_g_type_id', value: pgt.id %>
        <td class="fw" width='220px'><%= text_field iname,:name, {value: g.name,:class => 'txt'} %></td>
        <td width='220px'>
        <%= chosen_src "provider_id", Goodstype.find(pgt.g_type_id).providers, g.provider_id,{nil_value: 'Выберите поставщика...',add_name: iname} %></td>
        <td class="caption3" width='115px'><%= text_field iname,:date_supply, {value: g.date_supply, :class => 'txt datepicker'} %></td>
        <td class="caption3" width='238px'><%= text_field iname,:description, {value: g.description ,:class => 'txt fullwidth'} %></td>
        <td width='40px'><div class="inp_btn checkbox bigcheck <%= g.order ? 'active' : '' %>">
        <%= check_box_tag iname+'[order]', g.order, g.order %></td>
        <td width='60px'><%= chosen_src "currency_id", currency_src,g,{nil_value: '',add_name: iname, add_class: 'currency_src'} %></td>
        <%= td_sum_field(iname, :gsum ,'',{value: g.gsum}) %>
        <td><span class="icon icon_apply" item_id="<%= g.id %>"></span><span class="icon icon_cancel" item_id="'+item_rm_id+'"></span>'
        </td>
      </tr>
    <% end %>
       <tr id="new_pgt_item<%= pgt.id %>" class="invisible new_row">
       	<% iname = ['project_good',pgt.id].join %>
        <%= hidden_field iname,'project_g_type_id', value: pgt.id %>
        <td class="fw" width='220px'><%= text_field iname,:name, {:class => 'txt'} %></td>
        <td width='220px'>
        <%= chosen_src "provider_id", Goodstype.find(pgt.g_type_id).providers, nil,{nil_value: 'Выберите поставщика...',add_name: iname} %></td>
        <td class="caption3" width='115px'><%= text_field iname,:date_supply, {:class => 'txt datepicker'} %></td>
        <td class="caption3" width='238px'><%= text_field iname,:description, {:class => 'txt fullwidth'} %></td>
				<td width='40px'><div class="inp_btn checkbox bigcheck"><%= check_box_tag iname+'[order]', 'false', false %></td>
        <td width='60px'><%= chosen_src "currency_id", currency_src,1,{nil_value: '',add_name: iname, add_class: 'currency_src'} %></td>
        <%= td_sum_field(iname, :gsum) %>
        <td><span class="sub btn_a" id="btn-sub-send" pe_id="<%= pgt.id %>" action='/project_goods/' prm='project_good<%= pgt.id %>'> ok</span></td>
      </tr>
  </tbody>
</table>