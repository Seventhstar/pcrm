<table class="tleads twfixed" id="project_goods"  model="ProjectGood" action="project_goods" color_cls="ordered">
  
  <thead>
  	<tr>
	  	<th width='220px'>Позиция</th>
	  	<th width='216px'>Поставщик</th>
	  	<th width='115px'>Дата зак.<br> Поставки</th>
	  	<th width='230px'>Примечание</th>
	  	<th width='30px' alt="Предложено / заказано"> Зак.</th>
	  	<th width='58px'>Валюта</th>
	  	<th fld='gsum' width='90px'>Стоимость <br> Заказ</th>
	  	<th width='48px'></th>
		</tr>
  </thead>
  
  <%  total = [0,0,0,0] %>
  <tbody>
    <% @goods.order(:id).each do |g| %>
      <tr id="pgt_item<%= g.id %>" class="sw_color ordered">
        <td width='220px'><%= g.name %></td>
        <td width='210px'><%= g.provider_name %></td>
        <td width='115px'><%= g.date_offer.try('strftime',"%d.%m.%Y") %><br><%= g.date_supply.try('strftime',"%d.%m.%Y") %></td>
        <td width='230px'><%= g.description %></td>
        <td><span class="check_img sw_check good_check <%= g.order ? "checked" :"" %>" item_id="<%=g.id%>" chk="order"></span> </td>
        <td><%= g.currency_name %></td>
				<td width='90px' class="td_right"><%= g.gsum.to_sum if !g.gsum.nil? %><br><%= g.sum_supply.to_sum if !g.sum_supply.nil? %> </td>
        <%= tool_icons(g, {icons:'modal_edit,delete',tag:'link', add_class:'td_right', modal: true}) %>
        <%  total[g.currency_id] = total[g.currency_id] + g.gsum if !g.gsum.nil? %>
        <%  @all_total[g.currency_id] = @all_total[g.currency_id] + g.gsum if !g.gsum.nil? %>
        
      </tr>
    <% end %>
           <tr id="new_pgt_item<%= pgt.id %>" class="invisible editable new_row">
        <% iname = ['project_good',pgt.id].join %>
        <%= hidden_field iname,'project_g_type_id', value: pgt.id %>
        <td class="fw" width='220px'><%= text_field iname,:name, {:class => 'txt'} %></td>
        <td width='220px'>
        <% gt_coll = Goodstype.find_by(id: pgt.g_type_id) %>
        <% if !gt_coll.nil? %>
        <%= chosen_src "provider_id", gt_coll.providers, nil,{nil_value: 'Выберите поставщика...',add_name: iname} %></td>
        <% end %>
        <td class="caption3" width='115px'><%= text_field iname,:date_place, { value: Date.today.try('strftime',"%d.%m.%Y") , :class => 'txt datepicker'} %></td>
        <td class="caption3" width='238px'><%= text_field iname,:description, {:class => 'txt fullwidth'} %></td>
        <td width='25px'><div class="inp_btn checkbox bigcheck"><%= check_box_tag iname+'[order]', 'false', false %></td>
        <td width='60px'><%= chosen_src "currency_id", currency_src,1,{nil_value: '',add_name: iname, add_class: 'currency_src'} %></td>
        <%= td_sum_field(iname, :gsum) %>
        <td><span class="sub btn_a" id="btn-sub-send" pe_id="<%= pgt.id %>" action='/project_goods/' prm='project_good<%= pgt.id %>'> ok</span></td>
      </tr>
      <%= render 'project_goods/total', total: total, total_order: 0 %>
  </tbody>
</table>