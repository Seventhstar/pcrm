  
  <div class="box_i">
  <div class="hl"><span class="icon icon_chat"></span>Комментарии: </div>  
   <div class="jspContainer jsph<%= is_admin? ? 2:"" %><%= controller.action_name != 'edit' ? "1":"" %>">
     <div class="jspPane">

    <div class="comments_list_a">
        <% if @comments != nil %>
         <% @comments.each do |leads_comment| %>
            <div class="item">
              <div class="pic"><%= image_tag avatar_url(leads_comment.user, 50) %></div>
              <div class="cont">
                <div class="head">
                  <div class="name"><%= leads_comment.user.name %></div>
                  <div class="info"><%= leads_comment.created_at.strftime("%d.%m.%Y %H:%M:%S") %></div>
                  <div class="date">
                  
                    <% if (current_user== leads_comment.user || current_user.admin) && controller.action_name == 'edit' %>
                       <span class="icon icon_remove_1 btn_remove" leadcommentid=<%= leads_comment.id %>  leadid=<%= leads_comment.lead.id %> ></span>
                    <% end %>
                    </div>
                </div>
              </div>
              <div class="text">
                <span leadid=<%= leads_comment.lead.id %>><%= simple_format(leads_comment.comment) %></span>
              </div>
           </div>
         <% end %>
        <% end %>
     </div>
    </div>
  </div>

<% if controller.action_name == 'edit' %>
  <div class="commentAdd_form">
    <form action="">
      <fieldset>
        <input type="text" class="txt" placeholder="Новый комментарий" id="comment_comment">
         <span class="sub btn_a btn-sm" id="btn-chat" leadid=<%= @lead.id %>> Отправить</span>
      </fieldset>
    </form>
  </div>
<% end %>

</div>


