<% if @comments != nil %>
<% @comments.each do |leads_comment| %>
      <li class="left clearfix">
      <div class="chat-body clearfix">
      <span class="chat-img pull-left">
      <%= image_tag avatar_url(leads_comment.user, 50) %>
      </span>
      <div class="header">
        <strong class="primary-font"><%= leads_comment.user.name %></strong> <small class="pull-right text-muted">
        <span class="glyphicon glyphicon-time"></span><%= leads_comment.created_at %></small>
      </div>
      <p leadid=<%= leads_comment.id %>><%= leads_comment.comment %></p>
      </div>
      </li>

<% end %>
<% end %>