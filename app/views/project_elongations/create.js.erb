<% if @pe.errors.present? %>
  <%= render 'errors', item: @pe %>
<% else %>
  $("#project_elongations tr:last").before("<%= j render("project_elongation", pe: @pe) %>");
  $('#project_elongation_elongation_type_id').val(0).trigger('chosen:updated');
  $('#project_elongation_new_date').val('');

  $('#project_date_end_plan').val('<%= format_date(@pe.project.date_end) %>');
  $('#project_days').val('<%= @pe.project.days_duration %>');
  $('#project_date_end_plan, #project_days').attr('disabled','disabled');
<% end %>