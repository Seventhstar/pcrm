<div class="panel panel-default">
<div class="panel-heading">Статусы</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Статус</th>
      <th>Актуальный</th>
      <th></th>
      <th class="edit_delete"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr >
        <td><%= status.name %></td>
        <td><%= check_box_tag status.actual, status.actual, status.actual %></td>
        <td></td>
        <%= render "shared/td_edit_delete", :element => status %>
        
      </tr>
    <% end %>


    <tr>
    <td><%= form_for(@status) do |f| %>
	<%= f.text_field :name, :class => 'text_input' %></td>
    <td><%= f.check_box :actual %></td>
    <td colspan="2"><%= f.submit 'Добавить',:class => 'btn btn-warning btn-sm' %><% end %>
    </td>
  
    </tr>
  </tbody>
</table>
</div>

