<div class="panel panel-default">
<div class="panel-heading">Статусы</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Статус</th>
      <th>Актуальный</th>
      <th width="60px"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr >
        <td><%= status.name %></td>
        <td><%= check_box_tag status.actual, status.actual, status.actual %></td>
        
        <td><%= link_to image_tag('edit.png'), edit_status_path(status) %>
        <%= link_to image_tag('delete.png'), status, method: :delete, data: { confirm: 'Подтвердите удаление?' } %></td>
      </tr>
    <% end %>

    <tr>
     <td><%= text_field :name, :name, {:class => 'text_input'} %></td>
    <td><%= check_box :actual, :actual %></td>
    <td><span class='btn btn-warning btn-sm'> Записать </span></td>
    </tr>
  </tbody>
</table>
</div>