<div class="panel panel-default">
<div class="panel-heading">Статусы</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Статус</th>
      <th>Актуальный</th>
      <th></th>
      <th class="edit_delete"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr >
        <td><%= status.name %></td>
        <td><%= check_box_tag status.actual, status.actual, status.actual %></td>
        <td></td>
        <%= render "shared/td_edit_delete", :element => status %>
        
      </tr>
    <% end %>

    <tr>
    <td><%= text_field :name, :name, {:class => 'text_input'} %></td>
    <td><%= check_box :actual, :actual %></td>
    <td colspan="2"><span class='btn btn-warning btn-sm'> Записать </span></td>
    </tr>
  </tbody>
</table>
</div>