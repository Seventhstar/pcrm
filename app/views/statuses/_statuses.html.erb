<div class="sep_05"></div>
<%= form_for(@item) do |f| %>
<div class="itemAdd_form">
  <table><tbody>
  <tr><td class="caption">Новый статус:</td>
      <td><label class="inp_btn_label"><div class="inp_btn checkbox"><%= f.check_box :actual, {}, "true", "false" %></div>Актуальный
      </label></td>
      <td><div class="inp">
          <%= f.text_field :name, :class => 'txt' %>
          <span class="sub btn_a" id="btn-send"> Добавить</span>
      </td></tr>
  </tbody></table>
</div>
<% end %>
<div class="sep_15"></div>

<div class="items_box_cont tbl_a">
<div class="head">Список статусов</div>
<table class="tleads tstatuses">
  <thead>
    <tr>
      <th>Статус</th>
      <th width="60px" class="center">Актуальный</th>
      <th class="edit_delete"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |status| %>
      <tr >
        <td><%= status.name %></td>
        <td class="state">

        <span class="check_img <%= status.actual ? "checked" :"" %>" statusid="<%=status.id%>" chk="coder"></span>
        </td>
        <%= edit_delete(status, status.leads.count )%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


