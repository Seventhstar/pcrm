<div class="col-xs-6">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Статус</th>
      <th>Актуальный</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr >
        <td><%= status.name %></td>
        <td><%= check_box_tag status.actual, status.actual, status.actual %></td>
        
        <td><%= link_to image_tag('edit.png'), edit_status_path(status) %>
        <%= link_to image_tag('delete.png'), status, method: :delete, data: { confirm: 'Подтвердите удаление?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for(@status) do |f| %>
  

    <%= f.label 'Новый статус:' %>
    <%= f.text_field :name, :class => 'text_input' %>
    <%= f.check_box :actual %>
    <%= f.label 'Актуальный' %>

    <%= f.button 'Добавить',:class => 'btn btn-warning btn-sm' %>

<% end %>   
</div>
