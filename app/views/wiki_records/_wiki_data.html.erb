<div id="wiki_data">



<% if !@wiki_record.nil? %>
  
<% cat_name = @wiki_record.wiki_cat.try(:name) %>
<% cat_name = " / " + cat_name if !cat_name.nil? %>

<div class="hl hl_a bd"><%= [@wiki_record.name,cat_name].join %>  
  <%= link_to "", [:edit,@wiki_record], :class=>"icon icon_edit right" %>
</div>

  <%= RedCloth.new(@wiki_record.description).to_html.html_safe %>
  <ul class="files_ul">
        <% @wiki_record.attachments.order(:name).each do |file| %>
        <li><a href="/download/WikiRecord/<%= @wiki_record.id %>/<%= file.id.to_s+File.extname(file.name) %>" target="_blank">
        <%= file.name %> (<%= file.created_at.try('strftime',"%d.%m.%Y") %>)</a></li>
        <% end -%>
        </ul>
<% end %>

</div>