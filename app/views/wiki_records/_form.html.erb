<div class="hl hl_a bd">База знаний
<%= link_to "", @wiki_record, method: :delete, data: { confirm: 'Действительно удалить знание?' }, :class=>"icon icon_remove right" %>
</div>

<%= simple_form_for(@wiki_record) do |f| %>
  
  <div class="box_wide">
  <div class="box_wrap box_wrap_1">

    <div class="panel-left">  
    <table class="tbl_fc">
    	<tr><td class="caption">Название:</td>
    	    <td><div class="inp_w"><%= f.input :name, label: false %></div></td></tr>
			<tr><td class="caption">Описание:</td>
		    <td><div class="inp_w"><%= f.text_area :description, class: :txt, label: false %></div>
			</td></tr>
			<tr><td class="caption">Папка:</td>
			<td><div class="inp_w">
			<%= f.select :parent_id, content_tag(:option,'Корневая папка',:value=>0)+options_for_select(@wiki_folders.collect{ |u| [u.name, u.id] },@wiki_record.parent_id) %></div>
			</td></tr>
			<tr><td class="caption"></td>
			<td>
				<%= link_to 'Отмена', wiki_records_path, :class => "sub btn_a btn_reset"%>
				<%= f.button :submit, value: 'Сохранить', :class => 'sub btn_a' %></td></tr>
		</table>
		</div>
		  <div class="panel-right">
    	<p><label for="wiki_file"> <a class="btn_c btn_add"><span class="pict"><span class="icon icon_file"></span></span>Добавить файл</a> </label></p>
    	<div class="file_progress">
    		<div class="progress">
    			<div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
    				<span class="sr-only">20% Complete</span>
    			</div>
    		</div>
    	</div>

    	<input id="wiki_file" type="file" ownerid="<%= @wiki_record.id %>" name="file" data-url="/file" multiple="" style="display: none;">
    	<div class="files_list_a">
    		<%= render "shared/files" %>
    	</div>

    </div>
<% end %>
