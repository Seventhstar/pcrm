<table class="fullwidth">
  <tbody>
    <% @wiki_records.each do |wiki_record| %>
    <% @files = wiki_record.attachments %>
  
      <tr class="tr_folder" item="<%= wiki_record.id %>">
        <td class="td_folder"><span class="folder icon <%= wiki_record.admin ? 'admin' : '' %>" id='folder<%= wiki_record.id %>'> </span></td>
        <td class="wiki_name"><span><%= wiki_record.name %></span></tr></tr>
      <tr class="hidden" id="sub<%= wiki_record.id %>">
        <td></td>
        <td class="wiki_descr"><%= RedCloth.new(wiki_record.description).to_html.html_safe %></td></tr>
      <tr class="hidden" id="files<%= wiki_record.id %>">
        <td></td>
        <td>
        <ul class="files_ul">
        <% wiki_record.attachments.order(:name).each do |file| %>
        <li><a href="/download/WikiRecord/<%= wiki_record.id %>/<%= file.id.to_s+File.extname(file.name) %>" target="_blank"><%= file.name %> (<%= file.created_at.try('strftime',"%d.%m.%Y") %>)</a></li>
        <% end -%>
        </ul>
        </td>
      </tr>
      </tr>
      <tr class="hidden child_data" id="chitem_<%= wiki_record.id %>"></tr>
    <% end %>
  </tbody>
</table>