<p id="notice"><%= notice %></p>

<h1>Listing Leads Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads_comments.each do |leads_comment| %>
      <tr>
        <td><%= leads_comment.comment %></td>
        <td><%= leads_comment.user_id %></td>
        <td><%= leads_comment.lead_id %></td>
        <td><%= link_to 'Show', leads_comment %></td>
        <td><%= link_to 'Edit', edit_leads_comment_path(leads_comment) %></td>
        <td><%= link_to 'Destroy', leads_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

