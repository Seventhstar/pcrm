<div class="container options-menu">



	<div class="col-menu">

		<div class="user-link">
		
		<span class="glyphicon glyphicon-user"></span>
		<%= link_to "Пользователи",:users %>
		
		</div>

		<% if ['leads','statuses','channels'].include?(params['options_page']) %>
		<div class="panel panel-default">
			<div class="panel-heading">Настройки лидов:</div>
			<div class="list-group">
			  <%= option_link("statuses","Статусы") %>
			  <%= option_link("channels","Каналы") %>
			</div>
			
		</div>
		<% end %>

		<% if ['providers','budgets','goodstypes','styles'].include?(params['options_page']) %>		    
		<div class="panel panel-default">
			<div class="panel-heading">Настройки поставшиков:</div>
			<div class="list-group">
			    <%= option_link("budgets","Бюджеты") %>
			    <%= option_link("goodstypes","Виды товаров") %>
			    <%= option_link("styles","Стили") %>
			</div>
		</div>
                <% end %> 
	</div>

	

	<div class="col-md-8">
		<%= render @page_render %>
	</div>

</div>