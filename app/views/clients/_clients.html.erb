<div class="panel panel-default">
<table class="tleads">
  <thead>
    <tr>
      <th>ФИО</th>
      <th>Адрес</th>
      <th>Телефон</th>
      <th>E-mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.address %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <% if is_admin? %>
          <%= tool_icons(client,{icons:'edit,show', modal: true}) %>
        <% else %>
          <%= tool_icons(client,{icons:'show', modal: true}) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
