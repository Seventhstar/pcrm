<h1>Стили</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Стиль</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
   
        <td><%= link_to 'Edit', edit_style_path(style) %>
        <%= link_to 'Destroy', style, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Style', new_style_path %>
