<div class="panel panel-default">
<div class="panel-heading">Стили</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Канал</th>
      <th width="60px"></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
        
        <%= render "shared/td_edit_delete", {:element => style, :subcount => style.providers.count }%>
      </tr>
    <% end %>

   <tr>
   <td colspan="2">
  <%= form_for(@style) do |f| %>
    <%= f.label 'Новый стиль:' %>
    <%= f.text_field :name, :class => 'text_input' %>
    <%= button_tag 'Добавить',:class => 'btn btn-warning btn-sm' %>
  <% end %>
  </td>
  </tr>

  </tbody>


</table>
</div>