<div class="col-xs-6">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Стиль</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @styles.each do |style| %>
      <tr >
        <td><%= style.name %></td>
        <td><%= link_to image_tag('edit.png'), edit_style_path(style) %>
        <%= link_to image_tag('delete.png'), style, method: :delete, data: { confirm: 'Подтвердите удаление?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for(@style) do |f| %>
  

    <%= f.label 'Новый стиль:' %>
    <%= f.text_field :name, :class => 'text_input' %>
    <%= f.button 'Добавить',:class => 'btn btn-warning btn-sm' %>

<% end %>   
</div>

