<%= hidden_field_tag :sort, params[:sort] %>
<%= hidden_field_tag :direction, params[:direction] %>


<% @goodstypes.each do  |gt| %>
<% prv = gt.providers.where(:id => @ids) %>
<% if prv.count>0 %>
  

<div class="panel panel-default">
<div class="panel-heading table-heading head month"> <%= gt.name %></div>
<table class="tleads">
  <thead>
    <tr>
      <th>Название</th>
      <th width="160px">Специализация</th>
      <% if !@only_actual %>
        <th width="130px">Статус</th>
      <% end %>
      <th width="130px">Телефон</th>
      <th width="170px">Сайт</th>
      <th width="220px">Адрес</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    
      <% prv.each do |provider| %>
        <tr>
          <td><%= provider.name %></td>
          <td><%= provider.spec %></td>
          <% if !@only_actual %>
            <td><%= colored_status(provider.p_status) %></td>
          <% end %>
          <td><%= provider.phone %></td>
          <td><%= site_link(provider.url) %></td>
          <td><%= provider.address %></td>
          <%= td_tool_icons(provider,'edit,show','href') %>
        </tr>
      <% end %>
    
  </tbody>
</table>
</div>
<% end %>
<% end %>


