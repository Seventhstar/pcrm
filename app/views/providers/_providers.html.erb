<%= hidden_field_tag :sort, params[:sort] %>
<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :cur_method,controller.action_name, {controller: controller.controller_name} %>

<div class="panel panel-default">
<table class="tleads">
  <thead>
    <tr>
      <th>Название</th>
      <th width="160px">Специализация</th>
      <th width="130px">Телефон</th>
      <th width="170px">Сайт</th>
      <th width="220px">Адрес</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= provider.name %></td>
        <td><%= provider.spec %></td>
        <td><%= provider.phone %></td>
        <td><%= site_link(provider.url) %></td>
        <td><%= provider.address %></td>
        <%= td_tool_icons(provider,'edit,show','href') %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

