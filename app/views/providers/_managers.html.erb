<div class="tbl_a">
<div class="head"> Менеджеры:</div>
<table class="tleads" id="provider_managers"  model="ProviderManager" action="provider_managers">
  <thead>
    <tr>
      <th width="380px" class="center" fld='name'>ФИО</th>
      <th width="330px" class="center" fld='phone'>Телефон</th>
      <th class="center" fld='email'>E-mail</th>
      <th class="edit_delete"></th>
    </tr>
  </thead>
    <%= hidden_field 'manager','provider_id', value: @provider.id %>
  <tbody>

    <%= render partial: @managers, as: :pm %>

     <tr id="new_item">
      <td class="caption3"><span>Новый менеджер: </span>
        <div class="left" style="width:258px;" ><%= text_field "manager",:name, {:class => 'txt fullwidth'} %></div> </td>
      <td><%= text_field "manager", :phone, {:class => 'txt fullwidth'} %></td>
      <td><%= text_field "manager", :email, {:class => 'txt fullwidth'} %></td>
      <td><span class="sub btn_a" id="btn-sub-send" providerid="<%= @provider.id %>" action='/provider_managers/' prm='manager'> Добавить</span></td></tr>

  </tbody>
</table>

</div>
