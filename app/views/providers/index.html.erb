<div class="items_box_head">
<div class="left">
<%= form_tag providers_path, :method => 'get', :id => "p_search" do %>

<label class="combobox">
<%= select_tag "style", content_tag(:option,'Стиль...',:value=>0)+options_from_collection_for_select(@styles, "id", "name"),:class => "select_custom select sel_val" %>
</label>

<label class="combobox">
<%= select_tag "budget", content_tag(:option,'Бюджет...',:value=>0)+options_from_collection_for_select(@budgets, "id", "name"),:class => "select_custom select sel_val" %> 
</label>

<label class="combobox">
<%= select_tag "goodstype", content_tag(:option,'Вид товара...',:value=>0)+options_from_collection_for_select(@goodstypes, "id", "name") %> 
</label>

<label class="combobox">
<%= select_tag "p_status", content_tag(:option,'Статус...',:value=>0)+options_from_collection_for_select(@p_statuses, "id", "name") %> 
</label>

<div class="combobox short_search"> 
<%= text_field_tag :search, params[:search], :class => "search_area txt", :placeholder=>"Поиск..." %>
</div>

<% end %>


</div>

<%= link_to 'Добавить поставщика', new_provider_path, class: "btn_a btn-add right" %>
</div>
</div>
<div class ="container">

<div id="div_tproviders">
 <%= render "providers" %>
</div>