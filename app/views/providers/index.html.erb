<div class="items_box_head">
<div class="panel-left">
<%= form_tag providers_path, :method => 'get', :id => "p_search" do %>

<label class="combobox">
<%= select_tag "style", content_tag(:option,'Стиль...',:value=>0)+options_from_collection_for_select(@styles, "id", "name",:selected=>@param_style) %>
</label>

<label class="combobox">
<%= select_tag "budget", content_tag(:option,'Бюджет...',:value=>0)+options_from_collection_for_select(@budgets, "id", "name",:selected=>@param_budget) %> 
</label>

<label class="combobox">
<%= select_tag "goodstype", content_tag(:option,'Вид товара...',:value=>0)+options_from_collection_for_select(@goodstypes, "id", "name",:selected=>@param_goodstype) %> 
</label>


<% end %>


</div>

<%= link_to 'Добавить', new_provider_path, class: "btn_a btn-add btn_slim right space20" %>
  <div class="switcher_a toggled">
    <a href="#" class="link_a left on only_actual" off="Все" on="Актуальные">Актуальные</a>
    <div class="scale">
      <div class="handle active"></div>
    </div>
  </div>

</div>
</div>
<div class ="container">
	<div id="div_tproviders">
	 	<%= render "providers" %>
	</div>
</div>