<div class="hl hl_a bd">Описание задачи:</div>

<%= simple_form_for(@develop) do |f| %>
	<div class="left">
		<table class="tbl_fc tbl_fc">
		<tr><td class="caption">Наименование:</td>
		    <td><div class="inp_w"><%= f.input :name, label: false %></div></td></tr>
	    </table>
	</div>

  <div class="box_wide">
  <div class="box_wrap box_wrap_1">

    <div class="left">  
    <table class="tbl_fc tbl_fc_1">
    	<tr><td class="caption">Проект:</td>
			<td><div class="inp_w"><%= f.select :project_id, options_for_select(@dev_projects.collect{ |u| [u.name, u.id] },@develop.project_id) %>
					
				</div>
			</td>
		</tr>
    	<tr>
    		<td></td><td><label class="inp_btn_label">
					<div class="inp_btn checkbox <%= @develop.coder ? "active" :"" %>"><%= f.check_box :coder, {}, "true", "false" %></div>Выполнено</label>
		            <label class="inp_btn_label">
					<div class="inp_btn checkbox <%= @develop.boss ? "active" :"" %>"><%= f.check_box :boss, {}, "true", "false" %></div>Проверено</label></td>
    	</tr>
		<tr><td class="caption">Описание:</td>
		    <td><div class="inp_w"><%= f.text_area :description, class: :txt, label: false %></div></td></tr>

		    		<tr><td class="caption"></td>
			<td>
				<%= link_to 'Отмена', develops_path, :class => "sub btn_a btn_reset"%>
				<%= f.button :submit, value: 'Сохранить', :class => 'sub btn_a' %></td></tr>

	</table>
    </div>
    <div class="right">

	<p><label for="dev_file"> <a class="btn_c btn_add">+ Добавить файл</a> </label></p>
	<div class="file_progress">
		<div class="progress">
			<div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
				<span class="sr-only">20% Complete</span>
			</div>
		</div>
	</div>

	<input id="dev_file" type="file" devid="<%= @develop.id %>" name="file" data-url="/file" multiple="" style="display: none;">
	<div class="files_list_a">
      		<%= render "dev_files" %>
      	</div>
    </div>
  </div>
  </div>



<% end %>

