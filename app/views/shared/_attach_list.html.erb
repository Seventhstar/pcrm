<% is_pg_class = @owner.class.name == 'ProjectGood' %>
<% btn_title = is_pg_class ? 'Добавить счет или КП' : 'Добавить файл' %>

<div class="add_progress"> 
<label for="attach_list" class="attach_list"> 
  <a class="btn_add"><span class="pict"><span class="icon icon_file"></span></span><%= btn_title %></a></label>

<div class="file_progress">
  <div class="progress">
    <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
      <span class="sr-only"> </span>
    </div>
  </div>
</div>
</div>

<input id="attach_list<%= is_pg_class ? '_pg' : '' %>" 
        type="file" 
        owner_id="<%= @owner.id %>" 
        owner_type="<%= self.controller_name %>" 
        owner_cache=""
        name="files" 
        data-url="/files" 
        multiple="" style="display: none;">
<ul class="files_list_a files_list_<%= controller.action_name == 'new' ? 'NilClass' : @owner.class %>">
 <%= render "files/files" %>
</ul>