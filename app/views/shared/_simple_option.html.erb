<div class="items_box_cont tbl_a">
<div class="head">Список бюджетов</div>
<table class="tleads">
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td></td>
        <%= edit_delete(item, item.parents_count )%>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= form_for(@item) do |f| %>
<div class="itemAdd_form">
  <table><tbody>
  <tr><td class="caption">Новый бюджет:</td>
      <td><div class="inp">
          <%= f.text_field :name, :class => 'txt' %>
          <input type="submit" class="sub btn_a" value="Добавить"></div>
      </td></tr>
  </tbody></table>
</div>
<% end %>