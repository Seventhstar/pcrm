<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Форма содержит <%= t('error', :count => object.errors.count) %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li class="flash_danger"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>