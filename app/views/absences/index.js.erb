$('#page_num').val(<%= @page + 1 %>)
<% if params['sort'] == 'calendar' %>
  $("#div_tabsences").html("<%= j render("calendar") %>");
<% else %>
  <% if @page == 1 %> 
    $("#div_tabsences").html('<div id="page_1"/><div id="page_2"/>')
  <% end %> 
  $("#page_<%= @page %>").html("<%= j render("absences") %>");
  $("#div_tabsences").append("<div id='page_<%= @page + 1 %>'/>");
<% end %>  

