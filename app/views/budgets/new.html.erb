<div class="col-xs-6">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Бюджет</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr >
        <td><%= budget.name %></td>
        <td><%= link_to image_tag('edit.png'), edit_budget_path(budget) %>
        <%= link_to image_tag('delete.png'), budget, method: :delete, data: { confirm: 'Подтвердите удаление?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for(@budget) do |f| %>
  

    <%= f.label 'Новый бюджет:' %>
    <%= f.text_field :name, :class => 'text_input' %>
    <%= f.button 'Добавить',:class => 'btn btn-warning btn-sm' %>

<% end %>   
</div>
